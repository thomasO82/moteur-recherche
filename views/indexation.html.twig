<!doctype HTML>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<title>Indexation</title>
		<link href="./main.css" rel="stylesheet" />
	</head>
	<body>
	{% set title = "Indexation" %}
		<header>
			{% include '_header.html.twig' %}
		</header>
		<section class="center">
			<div class="error">
				{% if error %}
				<p class="error-url"> Veuillez entrer une URL valide </p>
				{% endif %}
			</div>
			<h2>Entrez une url</h2>
				<form action="/" method="post">
					<div>
						<label for="url">
						<input class="input-text" id='url' name='url' type="text">
					</div>
					<div>
						<input type="submit" value="Envoyer">
					</div>
				</form>
				<div class='border'>
					<ol>
						{% for url in listUrls %}
						<b><li>{{ url }}</li><b>
						{% endfor %}
					</ol>
				</div>
				<script src="./main.js"></script>
		</section>
	</body>
</html>